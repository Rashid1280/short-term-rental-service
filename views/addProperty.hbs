<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Property</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Roboto', sans-serif;
      background-color: #f2f2f2;
    }
    .card {
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .btn-custom {
      background-color: #2ecc71;
      color: #fff;
      font-weight: 600;
    }
    .btn-custom:hover {
      background-color: #27ae60;
    }
  </style>
</head>
<body>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-6 col-md-8 col-12">
        <div class="card p-4">
          <h1 class="text-center mb-4 text-success">Add Property</h1>
          
          <form id="addPropertyForm" action="/addProperty" method="post" enctype="multipart/form-data">
            
            <!-- Property Type -->
            <div class="mb-3">
              <label for="propertyType" class="form-label fw-bold">Property Type</label>
              <select id="propertyType" name="propertyType" class="form-select" required>
                <option value="" selected disabled>Select Property Type</option>
                <option value="1bhk">1 BHK</option>
                <option value="2bhk">2 BHK</option>
                <option value="3bhk">3 BHK</option>
                <option value="1room">1 Room</option>
                <option value="2room">2 Room</option>
                <option value="hall">Hall</option>
              </select>
            </div>

            <!-- Description -->
            <div class="mb-3">
              <label for="description" class="form-label fw-bold">Description</label>
              <textarea id="description" name="description" rows="3" class="form-control" required></textarea>
            </div>

            <!-- Location -->
            <div class="mb-3">
              <label for="location" class="form-label fw-bold">Location</label>
              <select id="location" name="location" class="form-select" required>
                <option value="">Select a location</option>
                <option value="Tatibandh">Tatibandh</option>
                <option value="Hirapur Colony">Hirapur Colony</option>
                <option value="Parthivi">Parthivi</option>
                <option value="Harshit">Harshit</option>
                <option value="Lotus Valley">Lotus Valley</option>
                 <option value="Jainam">Jainam</option>
                  <option value="Amanaka">Amanaka</option>
                   <option value="Kabir Nagar">Kabir Nagar</option>
                    <option value="Bhatagaon">Bhatagaon</option>
                     <option value="Media City">Media City</option>
              </select>
            </div>

            <!-- Address -->
            <div class="mb-3">
              <label for="address" class="form-label fw-bold">Address</label>
              <input type="text" id="address" name="address" class="form-control" required>
            </div>

            <!-- Price -->
            <div class="mb-3">
              <label for="price" class="form-label fw-bold">Price</label>
              <input type="number" id="price" name="price" class="form-control" required>
            </div>

            <!-- Owner Contact -->
            <div class="mb-3">
              <label for="ownerNo" class="form-label fw-bold">Owner Contact Details</label>
              <input type="text" id="ownerNo" name="ownerNo" class="form-control" required>
            </div>

            <!-- Images -->
            <div class="mb-3">
              <label for="images" class="form-label fw-bold">Upload Images</label>
              <input type="file" id="images" name="images" class="form-control" multiple accept="image/*">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-custom w-100">Add Property</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
